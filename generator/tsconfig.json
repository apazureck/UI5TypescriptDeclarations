{
    "include": [
        "src",
        "typings"
    ],
    "compilerOptions": {
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": false,
        "sourceMap": true,
        "target": "es5",
        "module": "amd",
        "experimentalDecorators": true,
        "sourceRoot": "src",
        "outDir": "out",
        "lib": [
            "es2015.promise"
        ],
        "importHelpers": true
    },
    "exclude": [
        "node_modules",
        "out",
        "wwwroot",
        ".vscode",
        "bower_components"
    ]
}